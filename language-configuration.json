{
	"$comment": {
		"copyright": [
			"Copyright (c) 2018 Eirik Presteg√•rdshus",
			"Copyright (c) 2022 Aadi Desai"
		],
		"license": "MIT License"
	},
	"comments": {
		"blockComment": ["/*", "*/"],
		"lineComment": "//",
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["begin", "end"],
		["case", "endcase"],
		["casex", "endcase"],
		["casez", "endcase"],
		["checker", "endchecker"],
		["class", "endclass"],
		["clocking", "endclocking"],
		["config", "endconfig"],
		["coverage", "endcoverage"],
		["covergroup", "endgroup"],
		["fork", "join"],
		["fork", "join_any"],
		["fork", "join_none"],
		["function", "endfunction"],
		["generate", "endgenerate"],
		["interface", "endinterface"],
		["macromodule", "endmodule"],
		["module", "endmodule"],
		["package", "endpackage"],
		["primitive", "endprimitive"],
		["program", "endprogram"],
		["property", "endproperty"],
		["randcase", "endcase"],
		["specify", "endspecify"],
		["sequence", "endsequence"],
		["table", "endtable"],
		["task", "endtask"],
	],
	"autoClosingPairs": [
		{ "open": "(", "close": ")" },
		{ "open": "[", "close": "]" },
		{ "open": "{", "close": "}" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""],
	],
	"folding": {
		"markers": {
			"start": "^[ \\t\\n]*(?://[ \\t\\n]*#?region|`(?:ifdef|ifndef|elsif|else)\\b|\\b(?:(?:macro)?module|class)\\b)",
			"end": "^[ \\t\\n]*(?://[ \\t\\n]*#?endregion|`(?:elsif|else|endif)\\b|\\b(?:endmodule|endclass)\\b)",
		}
	},
}
